<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('./includes/navigation.ejs') %>

<main>
    <% if(prepared_orders.length==0){ %>
        <h2>There are no prepared orders for today. </h2>
    <% } %>

    <div class="grid">
        <% prepared_orders.forEach(function(item) { %> 
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">
                    Order Id: <%= item.order_id %>
                </h1>
            </header>
            <div class="card__content">
                <h3 class="product__price">
                    Table Id:<%= item.table_id %><br></br>
                    Slot no:<%= item.slot_no %><br></br>
                    Customer Id:<%= item.customer_id %><br></br>
                </h3>
            </div>
            
        </article>
        <% }); %>
        </div>
</main>