<%- include('./includes/navigation.ejs') %>

<main>
    <%= cat1_name %>
    <div class="grid">
    <% cat1.forEach(function(item){ %>
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">
                    <%= item.name %>
                </h1>
            </header>
                <h3 class="product__price">Price:
                    <%= item.price %>
                </h3>
               
           
            <div class="card__actions">
                <form action="/customer/home" method="post">
                    <label for="item_quantity">Choose quantity</label>
                    <input type="number" name="quantity" id="item_quantity" step="1">
                    <button class="btn" type="submit">Add to Cart</button>
                    <input type="hidden" name="recipeid" value=<%= item.recipe_id %>>
                </form>
            </div>
        </article>  
    <% }); %>
    </div>

