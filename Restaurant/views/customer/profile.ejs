<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('./includes/navigation.ejs') %>



<main>
    
    <form action="/customer/profile" method="post">
        <label for="cust_name">Name:</label>
        <input type="text" name="cust_name" value="<%= cust.name %>" >
        <label for="email_id">Email:</label>
        <input type="email" name="email_id"  value="<%= cust.email %>" readonly>
        <label for="Number">Phone Number:
        <input type="tel" name="number" value="<%= cust.phone %>" pattern="[0-9]{10}">
        <label for="Number">Password:
        <input type="password" name="passwd" value="<%= cust.password %>" >
        <label for="address">Choose address</label>
            <select name="address">
                <% if (cust.address){ %>
                    <% addrs.forEach(function(addr) { %>
                            <% if (cust.address==addr.addr_id){ %>
                                <option value="<%= addr.addr_id %>" selected><%= addr.name %></option>
                            <% } else{%>
                                <option value="<%= addr.addr_id %>" ><%= addr.name %></option>
                            <% } %> 
                    <% }); %>
                <% } %>
                
            </select>
        <button class="btn" type="submit">Save</button>
       
    </form>
    
    
    
    
</main>