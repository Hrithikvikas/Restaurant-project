<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('./includes/navigation.ejs') %>

<main>
    <button type="button" onclick="openForm()">Book Table</button>

    <div class="form-popup" id="myForm">
        <form action="/customer/booktable" method="post" class="form-container">  
            <label for="slot_no">Choose a slot </label>
            <select name="slot_no">
                <option value="1">Slot 1</option>
                <option value="2">Slot 2</option>
                <option value="3">Slot 3</option>
            </select>
            <button type="submit" class="btn">Confirm slot</button>
            <button type="button" class="btn cancel" onclick="closeForm()">Cancel Booking</button>
        </form>
      </div>

      <h2>Tables booked for today</h2>
      <% /* need to show already booked tables here */
</main>

<script>
    function openForm() {
      document.getElementById("myForm").style.display = "block";
    }
    
    function closeForm() {
      document.getElementById("myForm").style.display = "none";
    }
 </script>