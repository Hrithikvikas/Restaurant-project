<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('./includes/navigation.ejs') %>

<% /* we need tables avaialble in that particular slot */ %>

<main>
    <div class="grid">
        <% tables.forEach(function(table){ %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        <%= table.table_id %>
                    </h1>
                </header>
                    <h3 class="product__price">Number of seats:
                        <%= table.seater %>
                    </h3>
                    
                <div class="card__actions">
                    <form action="/customer/booktable" method="post">
                        <button class="btn" type="submit">Confirm this table</button>
                        <input type="hidden" name="table_id" value="<%= table.table_id %>">
                        <input type="hidden" name="slot_no"  value="<%= slotno %>">
                    </form>
                </div>
            </article>  
        <% }); %>
        </div>
</main>